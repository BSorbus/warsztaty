$(document).ready(function() {
  var oRoletable = $('#roles-table').DataTable({
    responsive: true,
    processing: true,
    serverSide: true,
    deferRender: true,
    searchDelay: 500,
    ajax: { 
      url: $('#roles-table').data('source'),
      type: "GET",
      error: function (jqXHR, exception) {
        console.log(jqXHR);
        if (jqXHR.status == 401) {
          window.location.reload();
        } else {
          getErrorMessage(jqXHR, exception);
        }
      }
    },
    pagingType: "full_numbers",
    lengthMenu: [[10, 15, 25, 50, 100, -1], [10, 15, 25, 50, 100, "Wszystkie"]],
    iDisplayLength: -1,
    columns: [
      { "data": "id",
        "visible": false }, 
      { "data": "name" }, 
      { "data": "special",
        "searchable": false },
      { "data": "note" },
      { "data": "activities" }
    ],
    order: [[ 1, "asc" ]],
    language: {
      url: '<%= asset_path("pl.json.erb") %>'
    }
  });



  var oRoleUserstable = $('#role-users-table').DataTable({
    responsive: true,
    processing: true,
    serverSide: true,
    deferRender: true,
    searchDelay: 500,
    ajax: { 
      url: $('#role-users-table').data('source'),
      type: "GET",
      error: function (jqXHR, exception) {
        console.log(jqXHR);
        if (jqXHR.status == 401) {
          window.location.reload();
        } else {
          getErrorMessage(jqXHR, exception);
        }
      }
    },
    pagingType: "full_numbers",
    lengthMenu: [[10, 15, 25, 50, 100, -1], [10, 15, 25, 50, 100, "Wszystkie"]],
    iDisplayLength: -1,
    columns: [
      { "data": "id",
        "visible": false }, 
      { "data": "name" }, 
      { "data": "note" }, 
      { "data": "has_role",
        "searchable": false,
        "sortable": false },
      { "data": "action",
        "searchable": false,
        "sortable": false }
    ],
    preDrawCallback: function( settings ) {
      // jezeli panel nie jest widoczny, to przerwij Å‚adowanie danych
      if ( $( "#collapse_role_users" ).is( ":hidden" ) ) {
        return false;
      }
    },
    order: [[ 1, "asc" ]],
    language: {
      url: '<%= asset_path("pl.json.erb") %>'
    }
  });


  $('#role-users-table tbody').on( 'click', 'button', function () {
      $.ajax({
        url: $(this).attr('ajax-path'),
        type: $(this).attr('ajax-method'),
        async: false,
        error: function (jqXHR, exception) {
          console.log(jqXHR);
          if (jqXHR.status == 401) {
            window.location.reload();
          } else {
            getErrorMessage(jqXHR, exception);
          }
        }
      });
      oRoleUserstable.draw();
    });


  // jezeli nastepuje wyswietlenie panelu, to zaladuj dane
  $('#collapse_role_users').on('shown.bs.collapse', function (){
  //  Wykomentowalem wiersz ponizej poniewaz powoduje podwojne pobieranie danych    
  //  oRoleUserstable.ajax.reload();
    oRoleUserstable.draw();
  });

  
});

