<div class="container deviseform">
  <div class="col-sm-6 col-sm-offset-3">
 
    <div class="panel panel-primary">
      <div class="panel-heading"> 
        <h3 class="panel-title"><%= t('devise.passwords.form.edit.title') %></h3> <!-- Change your password -->
      </div>
      <div class="panel-body">

        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>

          <p><%= t('devise.passwords.form.edit.header_text') %></p>
          <%#= devise_error_messages! %>

          <% if resource.errors.any? %>
            <div id="error_explanation" class="panel panel-danger">
              <div class="panel-body">
                <ul>
                <% resource.errors.full_messages.each do |msg| %>
                  <li><h5><%= msg %></h5></li>
                <% end %>
                </ul>
              </div>
            </div>
          <% end %>
       
          <%= f.hidden_field :reset_password_token %>
          <div class="form-group">
            <%= f.label :password, class: 'control-label' %>
            <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: 'control-label' %>
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
          </div>

           <%= f.submit t('devise.passwords.form.edit.button_submit'), :class => 'btn btn-primary pull-right' %><!-- Button: 'Change my Password' -->

        <% end %>

      </div>
      <!--<div class="panel-footer">
        Panel footer
      </div> -->
    </div><!-- /panel panel-primary -->
  </div><!-- /col-sm-12 -->
</div><!-- /container -->
