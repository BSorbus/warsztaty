        <span class="index-title visible-xs"><%= t '.title' %></span>
      </h3>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->
</div> <!--/container -->

<br>

<div class="container">
  <div class="row">

    <% if policy(:exposition).create? %>

      <div class="col-sm-12">
        <fieldset class="my-fieldset">
          <legend class="my-fieldset"><%= t('.fieldset_title') %></legend>


          <%= form_for Exposition.new do |f| %>

            <div class="row">
              <div class="form-group col-sm-6">
                <%= f.label :name, class: 'control-label' %><br>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="form-group col-sm-4">
                <%= f.label :photo, class: 'control-label' %><br>
                <%= f.file_field :photo, multiple: false, class: 'form-control' %>
              </div>
              <div class="form-group col-sm-2">
                <br>
                <%= f.submit nil, class: 'btn btn-success' %>
              </div>

            </div>

          <% end %>
        </fieldset>
      </div> <!-- /col-sm-12 -->
    <% end %>

  </div> <!--/row -->

</div> <!--/container -->

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= render 'gallery' %>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->
</div> <!--/container -->

