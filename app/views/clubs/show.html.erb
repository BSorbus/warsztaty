<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h3 class="center">
        <span class="fa fa-flag glyp-index-title" aria-hidden="true"></span>
        <span class="index-title"><%= @club.try(:number) %></span>
      </h3>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->

  <%= render partial: "shared/basic_info",        locals: {partial_data: @club} %>
  <%= render partial: "shared/station_full_info", locals: {partial_data: @club} %>
  <%= render partial: "shared/applicant_info",    locals: {partial_data: @club} %>
  <%= render partial: "shared/enduser_info",      locals: {partial_data: @club} %>

  <br>
  <%= link_to clubs_path, class: "btn btn-default" do %>
    <span class="fa fa-list"></span>
    <%= t("helpers.links.index") %>
  <% end %>

</div> <!--/container -->

