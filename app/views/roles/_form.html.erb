<div class="col-sm-11">
  <%= form_with(model: role, local: true) do |f| %>

    <% input_disabled ||= false  
       #if input_disabled is not passed to the partial it doesn't crash. 
       # We default it to false 
    %>

    <%= form_errors_for role %>

    <div class="row">
      <div class="col-sm-6">
        <div class="row">

          <div class="form-group required col-sm-12">
            <%= f.label :name, class: 'control-label' %>
            <%= f.text_field :name, autofocus: true, class: 'form-control input-sm', disabled: input_disabled %>
          </div>

        </div>  <!-- /row -->
      </div>  <!-- /col-sm-6 -->


      <div class="col-sm-6">
        <div class="row">
          <div class="form-group col-sm-12">
            <%= f.label :note, class: 'control-label' %>
            <%= f.text_area :note, :rows => 4, :cols => 50, class: 'form-control input-sm', disabled: input_disabled %>
          </div>
        </div> <!-- /row -->
      </div> <!--/col-sm-6 -->

    </div>  <!-- /row -->

    <div class="row">
      <div class="col-sm-12">
        <div class="row">

          <div class="form-group col-sm-12">
            <%= f.label :activities %>
            <%= f.text_field :activities, class: 'form-control input-sm', disabled: input_disabled %>
          </div>

        </div> <!-- /row -->
      </div> <!--/col-sm-12 -->
    </div>  <!-- /row -->


    <hr class="hr-without-top-margin">

    <% if input_disabled %>
      <!-- for "Show" -->
    <% else %>
      <!-- form "New"/"Edit" -->
      <div class="row">

        <%= link_to roles_path, class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-th-list"></span>
          <%= t("helpers.links.index") %>
        <% end %>
        <%= link_to :back, class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-arrow-left"></span>
          <%= t("helpers.links.back") %>
        <% end %>

        <%= f.submit nil, class: 'btn btn-success' %>
      </div> <!-- /row -->
    <% end %>
    
  <% end %>

</div> <!--/col-sm-11-->
