<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h3 class="center">
        <span class="glyphicon glyphicon-sunglasses glyp-index-title" aria-hidden="true"></span>
        <span class="index-title hidden-xs"><%= t '.title' %></span>
        <span class="index-title visible-xs"><%= t '.navbar' %></span>
      </h3>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->
</div> <!--/container -->

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <table id="roles-datatable" class="hover cell-border" cellspacing="0" width="100%", 
        data-source="<%= roles_path(format: :json) %>", 
        data-locale_url="<%= datatables_lang_path(format: :json) %>", 
        data-export_csv_url="<%= export_roles_path(format: :csv) %>">
        <thead>
          <tr>
            <th>id</th>
            <th class='col-sm-4'><%= Role.human_attribute_name(:name) %></th>
            <th class='col-sm-4'><%= Role.human_attribute_name(:note) %></th>
            <th class='col-sm-4'><%= Role.human_attribute_name(:activities) %></th>
          </tr>
        </thead>

        <tbody>
           <!--data from JSON -->
        </tbody>
      </table>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->

</div> <!--/container -->

